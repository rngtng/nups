<!DOCTYPE html>
<html>
<head>
  <title>Nups</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <base target="main">
</head>
<body bgcolor="#6699CC" id="menu">
  <%= image_tag 'logo.jpg' %>
  <br><br>

  <% if current_user.admin? %>
   <div>
     <%= select_tag 'menu', options_from_collection_for_select(User.all, :id, :email) %><br><br>
     <strong>Admin</strong>
      <ul> 
        <li><%= link_to 'Users',  users_path %></li>
        <li><%= link_to 'Accounts',  accounts_path %></li>
      </ul>
    </div>
    <br><br>
  <% end %>
  
  <div><strong>Newsletters</strong>
    <ul> 
      <% @user.accounts.each do |account| %>
        <li><%= link_to account.name, account_newsletters_path(account) %>
      <% end %>
    </ul>
    
  </div>
  <br><br>

</body>
</html>
