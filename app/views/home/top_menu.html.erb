<!DOCTYPE html>
<html>
<head>
  <title><%= t 'application.title' %></title>
  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>
  <base target="main">
</head>
<body bgcolor="#6699CC" id="top_menu" marginheight="0" marginwidth="0" leftmargin="0" topmargin="0">
  <% if current_user.admin? %>
    <div style="float: left;">
      <%= link_to image_tag("status/#{resque_status}.gif", :border => 0 ),  top_menu_path, :target => '_self' %>
    </div>
  <% end %>
  <div style="float: right;">
    <% if current_user.admin? %>
      <%= link_to t('menu.users'),  users_path %> | 
      <%= link_to t('menu.accounts'),  accounts_path %> |
    <% end %>
    
    <%= link_to image_tag('buttons/logout.gif', :border => 0 ),  destroy_user_session_path, :target => '_top' %>
  </div>
</body>
</html>
