%html
  %head
    %title= t('application.title')
    = stylesheet_link_tag 'application', 'newsletter', 'progress', 'overlay', 'recipient'
    = javascript_include_tag "jquery.js", "jquery.rails.js", "jquery.tools.min.js"
    = javascript_include_tag "jquery.progress.js"
    = javascript_include_tag "plupload/jquery.plupload.queue.min.js", "plupload/plupload.full.min.js"
    = javascript_include_tag "behaviors/overlay.js"
    = include_tiny_mce_if_needed
    = csrf_meta_tag

  %body#application
    #main
      = yield

    #overlay.apple
      .content
      .footer
