<div id="newsletter" class="index">
   <div  style="float:left">
     <h2><%= "#{@account.name} - " if @account %><%= t 'newsletters.title' %></h2>
   </div>
   <div style="float:right">
    <%= form_tag(newsletters_path, :id => 'account_list') do %>
      <% opts = options_from_collection_for_select(@accounts, :id, :name, @account.try(:id)) %>
      <strong><%= t 'newsletters.account' %>: <%= select_tag 'account_id', opts, :include_blank => true, :onChange => "this.form.submit()" %></strong>
    <% end if @user.accounts.count > 1 %>
   </div>
   <div  style="float:right">
     <%= link_to( t( 'newsletters.new', :account_name => @account.name), new_account_newsletter_path(@account)) if @account %>
   </div>
  <table class="content">
    <tr>
      <th></th>
      <th><%= Newsletter.human_attribute_name(:progress) %></th>
      <th><%= Newsletter.human_attribute_name(:recipients_count) %></th>
      <th><%= t 'newsletters.action' %></th>
      <th><%= t 'newsletters.menu' %></th>
    </tr>

    <% @newsletters.each do |newsletter| %>
       <%=  render newsletter %>
    <% end %>
  </table>
</div>