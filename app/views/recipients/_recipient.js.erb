$('#recipient_<%= @recipient.id %> table')
  .attr('class', 'show')
  .find('.show .gender')
    .text('<%= @recipient.gender %>')
    .end()
  .find('.show .first_name')
    .text('<%= @recipient.first_name %>')
    .end()
  .find('.show .last_name')
    .text('<%= @recipient.last_name %>')
    .end()
  .find('.show .email')
    .text('<%= @recipient.email %>')

