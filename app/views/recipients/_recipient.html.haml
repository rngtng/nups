%tr.recipient{id:"recipient-#{recipient.id}", class:"#{recipient.state}"}
  = form_for [@account, recipient], :remote => true do |f|
    %td.state= recipient.state

    %td.show.gender= recipient.gender
    %td.edit.gender= f.select :gender, ['', 'Herr', 'Frau']

    %td.show.first-name= recipient.first_name
    %td.edit.first-name= f.text_field :first_name

    %td.show.last-name= recipient.last_name
    %td.edit.last-name= f.text_field :last_name

    %td.show.email= recipient.email
    %td.edit.email= f.text_field :email

    %td.deliveries-count= recipient.deliveries_count
    %td.reads-count= recipient.bounces_count
    %td.bounces-count= recipient.bounces_count

    %td.show.menu
      %a.icon.show{:href => account_recipient_send_outs_path(@account, recipient), :rel => "#overlay"}
        %span=t('ctrl.show')
      %a.icon.edit{:href => '#', :onclick => "$(this).closest('tr').toggleClass('edit')"}
        %span= t('ctrl.edit')
      - url = account_recipient_path(@account, recipient)
      %a.icon.delete{:href => url, 'data-method' => 'delete', 'data-confirm' => t('recipients.confirm.delete'), 'data-remote' => 'true'}
        %span= t('ctrl.delete')
    %td.edit.menu
      %a.icon.save{:href => '#', :onclick => "$(this).closest('form').submit()"}
        %span= t('ctrl.save')
      %a.icon.cancel{:href => '#', :onclick => "$(this).closest('tr').toggleClass('edit')"}
        %span= t('ctrl.cancel')
