#recipients.form
  = form_tag multiple_destroy_account_recipients_path(@account), :method => :delete, :remote => true, :class => "destroy" do
    %table.content{:style => "width: 700px, height: 100%"}
      %thead
        %tr
          %th{:align => 'center'}
            %h2= t('.title')

      %tr
        %td
          %ul.result
            %li.valid
              %strong= t('.valid_recipients') + ':'
              %ul
                - Array(@valid_recipients).each do |recipient|
                  %li= recipient.email
            %li.invalid
              %strong= t('.invalid_recipients') + ':'
              %ul
                - Array(@invalid_recipients).each do |recipient|
                  %li= recipient.email + " (#{recipient.errors.full_messages.join(', ')})"
          .input
            = t('.explanation')

            = text_area_tag :emails, params[:emails], {:cols => 90, :rows => 5}

            = submit_tag t('.ctrl.valid_delete'), :name => :delete, :confirm => t('.ctrl.confirm_delete'), :class => "confirm"

            = submit_tag t('.ctrl.check'), :class => "check"

